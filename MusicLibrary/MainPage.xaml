<Page
    x:Class="MusicLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <TextBlock Text="Music Library"
                       HorizontalTextAlignment="Center"
                   FontSize="100"
                   FontWeight="Bold" Width="673"/>
        </RelativePanel>
        <Grid>
            <Button Content="View Collection"
                Width="150"
                Height="90"
                VerticalAlignment="Top"
                Click="Button_Click" Margin="219,420,0,0"
                    />
            <Button Content="Add music to Library"
                 Width="150"
                 Height="90"
                 VerticalAlignment="Top"
                 Click="Button_Click" Margin="914,415,0,0"
        />

        </Grid>


    </Grid>
</Page>
